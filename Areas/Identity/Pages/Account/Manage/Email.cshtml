@page
@using PoliBaza.Pages.Shared
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model EmailModel
@inject ColorService ColorService
@{
    ViewData["Title"] = "Adres Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating input-group">
                <input style="background-color: @await ColorService.GetUserBackground(User); color: @await ColorService.GetUserBackground(User, true); opacity: 0.6; filter: grayscale(.8)" asp-for="Email" class="form-control" disabled />
                <div class="input-group-append">
                    <span style="background-color: @await ColorService.GetUserBackground(User); color: @await ColorService.GetUserBackground(User, true);" class="h-100 input-group-text text-success font-weight-bold">✓</span>
                </div>
                <label asp-for="Email" class="form-label"></label>
            </div>
            <div class="form-floating">
                <input style="background-color: @await ColorService.GetUserBackground(User); color: @await ColorService.GetUserBackground(User, true);" asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="Input.NewEmail" class="form-label"></label>
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
            <button style="color: @await ColorService.GetUserColor(User, true); background-color: @await ColorService.GetUserColor(User);" id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-100 btn btn-lg btn-primary">Zmień email</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
