@using PoliBaza.Data
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using PoliBaza.Pages.Shared
@inject ColorService ColorService
<ul class="nav nav-pills flex-column">
    <li class="nav-item"><a style="background-color: @ManageNavPages.IndexNavColor(ViewContext, await ColorService.GetUserColor(User)); color: @ManageNavPages.IndexNavColor(ViewContext, await ColorService.GetUserColor(User), true)" class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Preferencje</a></li>
    <li class="nav-item"><a style="background-color: @ManageNavPages.EmailNavColor(ViewContext, await ColorService.GetUserColor(User)); color: @ManageNavPages.EmailNavColor(ViewContext, await ColorService.GetUserColor(User), true);" class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a></li>
    <li class="nav-item"><a style="background-color: @ManageNavPages.ChangePasswordNavColor(ViewContext, await ColorService.GetUserColor(User)); color:  @ManageNavPages.ChangePasswordNavColor(ViewContext, await ColorService.GetUserColor(User), true);" class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Hasło</a></li>
</ul>
