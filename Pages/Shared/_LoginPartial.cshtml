@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject ColorService ColorService

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a style="color: @await ColorService.GetUserColor(User, true);" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Witaj, @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
            <button style="color: @await ColorService.GetUserColor(User, true);"  type="submit" class="nav-link btn btn-link">Wyloguj</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a style="color: @await ColorService.GetUserColor(User, true);" class="nav-link" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a>
    </li>
    <li class="nav-item">
        <a style="color: @await ColorService.GetUserColor(User, true);" class="nav-link" asp-area="Identity" asp-page="/Account/Login">Logowanie</a>
    </li>
}
</ul>
